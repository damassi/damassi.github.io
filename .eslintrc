{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "sinon": true
  },
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 0,
    "comma-dangle": 0,
    "quotes": [2, "single", "avoid-escape"],
    "strict": [2, "never"],
    "semi": [1, "never"],
    "new-cap": 0,
    "no-undef": 1,
    "no-extra-boolean-cast": 0,
    "no-shadow": 0,
    "no-undef-init": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-use-before-define": 0,
    "no-unused-vars": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}
